@model ShortenedUrl;

@{
    ViewData["Title"] = "Shortened Url";
}

<div style="width: 100%; padding: 30px;">
    <div>
        <div>Short Code: @Model.ShortCode</div>
        <div>Short Url: <a href="@Model.OriginalUrl">@Model.ShortUrl</a></div>
        <div>Long Url: @Model.OriginalUrl</div>
    </div>
</div>